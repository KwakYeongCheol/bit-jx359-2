<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Blog">
	<insert id="create" parameterType="Blog">
		insert into blogs (id, title, owner,dateCreated) 
		values(#{id}, #{title}, #{owner}, #{dateCreated})
	</insert>
	
	<update id="update" parameterType="Blog">
		update blogs set
			title = #{title}
		where id = #{id}
	</update>
	
	<sql id="select">
		SELECT
			id,
			title,
			owner,
			dateCreated
		FROM
			blogs 
	</sql>
	
	<select id="findAllByUserLoginId" resultType="Blog">
		<include refid="select"/>
		WHERE
			owner = #{loginId}
	</select>
	
	<select id="findAll" resultType="Blog">
		<include refid="select"/>
	</select>
	
	<select id="findById" resultType="Blog">
		<include refid="select"/>
		WHERE
			id = #{id}
	</select>
</mapper>
